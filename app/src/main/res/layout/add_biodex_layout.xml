<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:id="@+id/editText_studentID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student ID"/>

    <EditText
        android:id="@+id/editText_L_quad_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Left Quad Max"/>

    <EditText
        android:id="@+id/editText_R_quad_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Right Quad Max"/>

    <EditText
        android:id="@+id/editText_L_ham_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Left Hamstring Max"/>
    <EditText
        android:id="@+id/editText_R_ham_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Right Hamstring Max"/>
    <Button
        android:id="@+id/button_submitBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"/>
    <Button
        android:id="@+id/button_getBiodex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET DATA"/>

</LinearLayout>